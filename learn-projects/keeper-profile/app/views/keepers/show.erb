<div class="container">
  <header><img src="images/corneal-small.png" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h2>Welcome, <%= @user.first_name %>!</h2>

    <div class="content">
      <p>Write some bullshit here.</p>
    </div>
    
    <div class="sidebar">
      <!-- use sidebar to display first 3 animals in keeper's collection -->
      <h3><a href="/animals/index.erb" target="_blank" >Animal Friends</a></h3>
        <% @animals = @user.animals %> <!-- check that this works -->
      <ul>
        <% @animals.each do |animal| %>
        <li><b><%= animal.name %> -</b> <%= animal.species %></li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
